{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/server",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "types": [
      "node"
    ]
  },
  "files": [
    "server.ts",
    "init.ts",
    "email.ts",
  ],
  "include": [
    "entities/*.ts",
    "data.json",
    "server.ts",
    "init.ts",
    "email.ts",
    "helpers.ts",
    "rest.ts"
  ]
}